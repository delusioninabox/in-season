{{yield}}

<!-- Begin Options Bar -->
    <div class="options">
      
      <!-- Filters -->
      <span>Filters: </span>
      <div class="filter {{if hideVeggies 'inactive'}}" {{action "toggleClass" "hideVeggies"}}>Vegetables</div>
      <div class="filter {{if hideFruit 'inactive'}}" {{action "toggleClass" "hideFruit"}}>Fruit</div>
      <div class="filter {{if hideHerbs 'inactive'}}" {{action "toggleClass" "hideHerbs"}}>Herbs</div>
      
      <!-- Month Select -->
      <select name="month" id="viewMonth">
        <option value="1">January</option>
        <option value="2">February</option>
        <option value="3">March</option>
        <option value="4">April</option>
        <option value="5">May</option>
        <option value="6">June</option>
        <option value="7">July</option>
        <option value="8">August</option>
        <option value="9">September</option>
        <option value="10">October</option>
        <option value="11">November</option>
        <option value="12">December</option>
      </select>
      
    </div>
    <!-- End Options Bar -->
    
    <!-- Begin Displaying Results-->
    <div class="display">

          <!-- Begin Result Item -->
          {{#each produceResults as |item index|}}
              <div class="result" data-id={{index}} {{action "toggleSelectedItem" this index}}>
                  IMG<br/>
                  {{item.name}}
              </div>
          {{/each}}
          <!-- End Result Item -->

    </div>
    <!-- End Displaying Results -->